<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.CustomFonts.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <OnPlatform  x:TypeArguments="x:String"
                         Android="Font Awesome 5 Free-Regular-400.otf#Font Awesome 5 Free Regular" 
                         iOS="Font Awesome 5 Free"
                         x:Key="IconFontFamily"/>

            <Style x:Key="IconLabel" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource IconFontFamily}"/>
            </Style>
            
        </ResourceDictionary>
	</Application.Resources>
</Application>